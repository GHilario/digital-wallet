            "schema": {
              "$ref": "#/definitions/Usuario"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário criado com sucesso",
            "schema": {
              "$ref": "#/definitions/Usuario"
            }
          },
          "400": {
