        },
        "login_destino": {
          "type": "string",
          "example": "maria.jose"
        },
        "valor_transferido": {
          "type": "number",
          "example": 50
        },
        "login_origem": {
          "type": "string",
          "example": "joao.silva"
        },
        "data": {
          "type": "string",
          "example": "2021-09-20T08:17:09.513Z"
        }
      }
    }
  }
