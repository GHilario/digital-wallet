          "type": "string",
          "example": "joao.silva"
        },
        "saldo": {
          "type": "number",
          "example": 100
        }
      }
    },
    "AddMovimentacao": {
      "type": "object",
      "properties": {
        "login_destino": {
          "type": "string",
          "example": "maria.jose"
        },
